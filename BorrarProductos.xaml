<Page x:Class="CRUDInterfaces.BorrarProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRUDInterfaces"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BorrarProductos">

    <Grid >
        <!-- Diseña tu formulario aquí, por ejemplo: -->
        <StackPanel>
            <TextBlock Text="Nombre del Producto a Eliminar:" Foreground="White"/>
            <TextBox x:Name="txtProductName"/>

            <Button Content="Eliminar" Click="EliminarProducto" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
