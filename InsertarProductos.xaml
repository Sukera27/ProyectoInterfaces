<Page x:Class="CRUDInterfaces.InsertarProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRUDInterfaces"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertarProductos">

    <Grid VerticalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Nombre del Producto:" Foreground="White"/>
            <TextBox x:Name="txtProductName" Foreground="White" Margin="0,5,0,10"/>

            <TextBlock Text="Cantidad por Unidad:" Foreground="White"/>
            <TextBox x:Name="txtQuantityPerUnit" Foreground="White" Margin="0,5,0,10"/>

            <TextBlock Text="Precio Unitario:" Foreground="White"/>
            <TextBox x:Name="txtUnitPrice" Foreground="White" Margin="0,5,0,10"/>

            <TextBlock Text="Unidades en Pedido:" Foreground="White"/>
            <TextBox x:Name="txtUnitsOnOrder" Foreground="White" Margin="0,5,0,10"/>

            <!-- Agrega más campos según sea necesario -->

            <Button Content="Guardar" Click="GuardarProducto" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
