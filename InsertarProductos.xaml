<Page x:Class="CRUDInterfaces.InsertarProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRUDInterfaces"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertarProductos">

    <Grid >
        <!-- Diseña tu formulario aquí, por ejemplo: -->
        <StackPanel>
            <TextBlock Text="Nombre del Producto:" Foreground="White"/>
            <TextBox x:Name="txtProductName" Foreground="White"/>

            <TextBlock Text="Cantidad por Unidad:" Foreground="White"/>
            <TextBox x:Name="txtQuantityPerUnit" Foreground="White"/>

            <!-- Agrega más campos según sea necesario -->

            <Button Content="Guardar" Click="GuardarProducto"/>
        </StackPanel>
    </Grid>
</Page>
